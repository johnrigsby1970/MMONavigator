<Window x:Class="MMONavigator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMONavigator"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="280" Height="Auto" SizeToContent="WidthAndHeight"
        AllowsTransparency="True"
        Topmost="True"
        WindowStartupLocation="Manual"
        WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="Gray" />
    </Window.Background>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <SolidColorBrush x:Key="TextStroke" Color="black" />
        <SolidColorBrush x:Key="TextFill" Color="white" />
        <SolidColorBrush x:Key="TitleBar" Opacity="0.1" Color="White" />
    </Window.Resources>
    <Grid Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="105" />
            <ColumnDefinition Width="175" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>

            <RowDefinition Height="30" Name="destinationRow" />
            <RowDefinition Height="30" Name="targetRow" />
            <RowDefinition Height="30" Name="settingsRow" />
            <RowDefinition Height="50" />
            <RowDefinition Height="120" Name="compassRow" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0"
                   Fill="{StaticResource TitleBar}"
                   MouseEnter="TitleBar_MouseEnter" MouseLeave="TitleBar_MouseLeave">
        </Rectangle>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Height="30" VerticalAlignment="Top"
              MouseEnter="TitleBar_MouseEnter" MouseLeave="TitleBar_MouseLeave">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="dragbutton" Width="24" Height="24" Margin="3" Background="CornflowerBlue"
                        PreviewMouseLeftButtonDown="Rectangle_MouseLeftButtonDown" ToolTip="Drag Window"
                        Content="&#xF271;" FontFamily="Segoe MDL2 Assets" FontSize="12pt" 
                        Foreground="White" FontWeight="ExtraBold">
                </Button>
                <Button x:Name="settingsbutton" Width="24" Height="24" Margin="3" Content="&#xE713;"
                        FontFamily="Segoe MDL2 Assets" 
                        FontSize="12pt"
                        ToolTip="Toggle Settings" FontWeight="ExtraBold"
                        Click="HideShowSettings_Click" Foreground="White" Background="CornflowerBlue"
                        Visibility="Collapsed">
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="minbutton" Width="24" Height="24" 
                        FontSize="12pt" 
                        Margin="3" Click="MinimizeButton_Click"
                        Foreground="White" ToolTip="Minimize" Background="CornflowerBlue"
                        Visibility="Collapsed">
                    _
                </Button>
                <Button x:Name="closebutton" Width="24" Height="24" 
                        FontSize="12pt" 
                        Margin="3" Click="CloseButton_Click" Foreground="White"
                        ToolTip="Close" Background="CornflowerBlue"
                        Visibility="Collapsed">
                    X
                </Button>
            </StackPanel>
        </Grid>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FlowDirection="LeftToRight"
                    Orientation="Horizontal">
            <local:OutlinedTextBlock
                Text="Destination:"
                FontFamily="Verdana" FontSize="10pt"
                FontWeight="ExtraBold"
                TextWrapping="Wrap"
                StrokeThickness=".5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextAlignment="Left"
                Width="100"
                Margin="5,1,0,0"
                Stroke="{StaticResource TextStroke}"
                Fill="{StaticResource TextFill}" />

            <ComboBox
                ItemsSource="{Binding Locations}"
                SelectedItem="{Binding SelectedLocation}"
                Text="{Binding TargetCoordinates, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEditable="True"
                DisplayMemberPath="DisplayName"
                Height="22"
                FontSize="8pt"
                VerticalAlignment="Center" Width="140" />

            <Button Width="20" Height="20" Margin="3,0,0,0" Content="+"
                    ToolTip="Add to List" FontWeight="ExtraBold"
                    Visibility="{Binding IsItemNotInList, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Click="AddLocation_Click" Foreground="White" Background="CornflowerBlue">
            </Button>

            <Button Width="20" Height="20" Margin="3,0,0,0" Content="-"
                    ToolTip="Remove from List" FontWeight="ExtraBold"
                    Visibility="{Binding IsItemInList, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Click="RemoveLocation_Click" Foreground="White" Background="OrangeRed">
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FlowDirection="LeftToRight"
                    Orientation="Horizontal">
            <local:OutlinedTextBlock
                Text="Location:"
                FontFamily="Verdana" FontSize="10pt"
                FontWeight="ExtraBold"
                TextWrapping="Wrap"
                StrokeThickness=".5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextAlignment="Left"
                Width="100"
                Margin="5,1,0,0"
                Stroke="{StaticResource TextStroke}"
                Fill="{StaticResource TextFill}" />

            <TextBox
                Text="{Binding CurrentCoordinates ,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Height="20" Margin="1,1,0,0"
                FontSize="8pt"
                VerticalAlignment="Center" Width="140" />

            <Button Width="20" Height="20" Margin="3" Content="&#xF272;"
                    FontFamily="Segoe MDL2 Assets" ToolTip="Copy to Destination" FontWeight="ExtraBold"
                    Click="CopyLocationToDesination_Click" Foreground="White" Background="CornflowerBlue">
            </Button>

        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FlowDirection="LeftToRight"
                    Orientation="Horizontal">
            <local:OutlinedTextBlock
                Text="Order:"
                FontFamily="Verdana" FontSize="10pt"
                FontWeight="ExtraBold"
                TextWrapping="Wrap"
                StrokeThickness=".5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextAlignment="Left"
                Width="100"
                Margin="5,1,0,0"
                Stroke="{StaticResource TextStroke}"
                Fill="{StaticResource TextFill}" />

            <ComboBox
                ItemsSource="{Binding Settings.AvailableCoordinateOrders}"
                SelectedItem="{Binding Settings.CoordinateOrder}"
                Height="22"
                FontSize="8pt"
                VerticalAlignment="Center" Width="140" />
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" FlowDirection="LeftToRight"
                    Orientation="Horizontal">
            <TextBox x:Name="leftbutton" Width="20" Height="20" Margin="3"
                     VerticalAlignment="Center" VerticalContentAlignment="Center" TextAlignment="Center"
                     Text="&#xF0D5;" FontFamily="Segoe MDL2 Assets"
                     ToolTip="Turn left" FontWeight="ExtraBold" Foreground="White" Background="Chartreuse">
            </TextBox>

            <local:OutlinedTextBlock x:Name="labelDirection"
                                     Text="{Binding GoDirection , UpdateSourceTrigger=PropertyChanged}"
                                     FontFamily="Verdana" FontSize="20pt"
                                     FontWeight="ExtraBold"
                                     TextWrapping="Wrap"
                                     StrokeThickness="1"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Width="225"
                                     Stroke="{StaticResource TextStroke}"
                                     Fill="{StaticResource TextFill}" />
            <TextBox x:Name="rightbutton"
                     VerticalAlignment="Center" VerticalContentAlignment="Center" TextAlignment="Center"
                     Width="20" Height="20" Margin="3" Text="&#xF0D6;" FontFamily="Segoe MDL2 Assets"
                     ToolTip="Turn right" FontWeight="ExtraBold" Foreground="White" Background="Chartreuse">
            </TextBox>
        </StackPanel>

        <Grid Grid.Row="5" Grid.ColumnSpan="2" Height="120" Background="Transparent">
            <!-- Compass Circle -->
            <Ellipse Width="80" Height="80" Stroke="Gold" StrokeThickness="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- North Indicator -->
            <Grid Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RenderTransform>
                    <RotateTransform Angle="{Binding NorthRotation}" CenterX="40" CenterY="40"/>
                </Grid.RenderTransform>
                <Line X1="40" Y1="0" X2="40" Y2="10" Stroke="Gold" StrokeThickness="3"/>
                <TextBlock Text="N" Foreground="Gold" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-20,0,0"/>
            </Grid>

            <!-- Destination Dot -->
            <Grid Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RenderTransform>
                    <RotateTransform Angle="{Binding DestinationRotation}" CenterX="40" CenterY="40"/>
                </Grid.RenderTransform>
                <Ellipse Width="10" Height="10" Fill="LimeGreen" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-5,0,0"/>
            </Grid>
        </Grid>

    </Grid>
</Window>