<Window x:Class="MMONavigator.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#2D2D30" Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="PromptLabel" Text="Enter text:" Margin="0,0,0,5" Foreground="White"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" VerticalAlignment="Center" 
                 Background="#3E3E42" Foreground="White" BorderBrush="#555555"
                 Padding="2" KeyDown="InputTextBox_KeyDown"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"
                    Background="#3E3E42" Foreground="White"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" IsCancel="True"
                    Background="#3E3E42" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
