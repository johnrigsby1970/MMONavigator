<Window x:Class="MMONavigator.Views.WatcherConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Watcher" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#2D2D30" Foreground="White">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Game Profile:" Margin="0,0,0,5" FontWeight="Bold"/>
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ProfileComboBox" IsEditable="True" Background="#3E3E42" Foreground="Black" 
                              SelectionChanged="ProfileComboBox_SelectionChanged"/>
                    <Button x:Name="AddProfileButton" Grid.Column="1" Content="+" Width="20" Margin="5,0,0,0" Click="AddProfile_Click" 
                            ToolTip="Add Profile" Background="CornflowerBlue" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="DuplicateProfileButton" Grid.Column="1" Content="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Width="20" Margin="5,0,0,0" Click="DuplicateProfile_Click" 
                            ToolTip="Duplicate Profile" Background="CornflowerBlue" Foreground="White" FontWeight="Bold" Visibility="Collapsed"/>
                    <Button x:Name="RemoveProfileButton" Grid.Column="2" Content="-" Width="20" Margin="5,0,0,0" Click="RemoveProfile_Click" 
                            ToolTip="Remove Profile" Background="OrangeRed" Foreground="White" FontWeight="Bold"/>
                </Grid>

                <TextBlock Grid.Row="2" Text="Watch Mode:" Margin="0,0,0,5" FontWeight="Bold"/>
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton x:Name="ClipboardRadio" Content="System Clipboard" Foreground="White" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <RadioButton x:Name="FileRadio" Content="Log File" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Row="4" Text="Log File Path:" Margin="0,0,0,5" FontWeight="Bold" 
                           Visibility="{Binding IsChecked, ElementName=FileRadio, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Grid Grid.Row="5" Margin="0,0,0,15" Visibility="{Binding IsChecked, ElementName=FileRadio, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="FilePathTextBox" Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="2" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="..." Width="30" Margin="5,0,0,0" Click="BrowseButton_Click" Background="#3E3E42" Foreground="White"/>
                </Grid>

                <TextBlock Grid.Row="6" Text="Log File Regex:" Margin="0,0,0,5" FontWeight="Bold"
                           Visibility="{Binding IsChecked, ElementName=FileRadio, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBox x:Name="RegexTextBox" Grid.Row="7" Margin="0,0,0,15"
                         Background="#3E3E42" Foreground="White" BorderBrush="#555555" Padding="2"
                         AcceptsReturn="True" TextWrapping="Wrap" VerticalAlignment="Top"
                         Visibility="{Binding IsChecked, ElementName=FileRadio, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="System:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <ComboBox x:Name="SystemComboBox" Width="100" Margin="0,0,20,0" VerticalAlignment="Center"
                              Background="#3E3E42" Foreground="Black"/>

                    <TextBlock Text="Order:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <ComboBox x:Name="OrderComboBox" Width="100" VerticalAlignment="Center"
                              Background="#3E3E42" Foreground="Black"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"
                    Background="#3E3E42" Foreground="White"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" IsCancel="True"
                    Background="#3E3E42" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
